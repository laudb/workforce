<h1><%= @client.fullname %>'s requests</h1>

<% if @client.requests.empty? %>
<h3>No requests at the moment</h3>

<%= link_to fa_icon("plus") + "Create Request", new_admin_client_request_path(@client), class: "btn btn-primary" %>
<% else %>

	<% @client_requests.each do |client_request| %>
	<% if client_request.resolved == true %>
	  <h3>Request No: <%= client_request.id %> <%= link_to "status: assigned", admin_request_path(client_request), class: "btn btn-danger" %> </h3>
	<% else %> 
	  <h3>Request No: <%= client_request.id %> <%= link_to "status: unassigned", admin_request_path(client_request), class: "btn btn-success" %> </h3> 
	<% end %>  
	<% end %>	

<% end %>

<%= link_to "Back", :back, class: "btn btn-primary" %>