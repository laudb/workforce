<div class="admin-page">
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-sm-offset-1 form-box">

				<div class="row">
					
					<div class="col-lg-12 col-md-12">  
						<div class="panel panel-default">
							<div class="panel-heading">
								<h2><i class="fa fa-user"></i><strong>Clients</strong></h2>
							</div>
							<div class="panel-body">
								<table class="table bootstrap-datatable countries">
									<thead>
										<tr>
											<th>Name</th>
											<th>Email</th>
											<th>Phone Number</th>
											<th>Location</th>
											<th></th>
											<th></th>
										</tr>
									</thead> 


									<% if @clients.count == 0 %>
									<h1>No clients yet.</h1>
									<%= link_to fa_icon("plus") + "Create User", new_admin_client_path, class: "btn btn-primary" %>
									<% else %>
									
									<% @clients.each do |client| %>

									<% if client.requests.empty? %>

									<tbody>
										<tr>
											<td><%= client.fullname  %></td>
											<td><%= client.email %></td>
											<td><%= client.phone_number %></td>
											<td><%= client.location %></td>
											<td><%= link_to fa_icon("eye") + "Detail", admin_client_path(client), class: "btn btn-primary" %></td>
											<td><%= link_to fa_icon("plus") + "Create Request", new_admin_client_request_path(client), class: "btn btn-primary" %></td>
										</tr>

										<% else %>

										<tr>
											<td><%= client.fullname  %></td>
											<td><%= client.email %></td>
											<td><%= client.phone_number %></td>
											<td><%= client.location %></td>
											<td><%= link_to fa_icon("eye") + "Detail", admin_client_path(client), class: "btn btn-primary" %></td>
											<td><%= link_to fa_icon("eye") + "#{client.requests.count} Requests", admin_client_requests_path(client), class: "btn btn-primary" %></td>
										</tr>

									</tbody>

									<% end %>
									<% end %>
									<% end %>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>