<div class="admin-page">
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-sm-offset-1 form-box">  
           
           <h2>Client's Detail</h2>
			<p>Fullname: <%= @client.fullname%></p>
			<p>Email: <%= @client.email %></p>
			<p>Phone Number: <%= @client.phone_number %></p>
			<p>Location: <%= @client.location %></p>
			<p>Number of sign ins: <%= @client.sign_in_count %></p>
			<p>Last signed in: <%= @client.last_sign_in_at.strftime("%B %d, %Y at %T") %></p>
			<p>No. of Requests: <%= @client.requests.count %></p>
			------------------------------------------------------

			<p><%= link_to "Back", :back, class: "btn btn-primary" %></p>

			</div>
		</div>
	</div>
</div>