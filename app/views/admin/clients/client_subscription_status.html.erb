<div class="admin-page">
	<div class="container">
		<div class="row">
			<div class="col-sm-9 col-sm-offset-1 form-box">

				<div class="row">
					
					<div class="col-lg-12 col-md-12">  
						<div class="panel panel-default">
							<div class="panel-heading">
								<h2><i class="fa fa-user"></i><strong>Subscription Status of Clients</strong></h2>
							</div>
							<div class="panel-body">
								<table class="table bootstrap-datatable countries">
									<thead>
										<tr>
											<th>First Name</th>
											<th>Last Name</th>
											<th>status</th>
											<th>action</th>
											
										</tr>
									</thead>

									<% @clients.each do |client| %>
									<tbody>
										<tr>
											<td><%= link_to client.first_name, admin_client_path(client) %></td>
											<td><%= link_to client.last_name, admin_client_path(client) %></td>
											<td><% if client.subscribe == true %>
												subscribed
												<% else %>
												unsubscribed
												<% end %>
											</td>
											<td>actions</td>
										</tr>
									</tbody>
									<% end %>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>