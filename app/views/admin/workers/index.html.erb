<div class="admin-page">
  <div class="container">
  <div class="row">
    <div class="col-sm-9 col-sm-offset-1 form-box">
  
  <% if @workers.count == 0 %>
  <h1>No workers yet.</h1>
  <% else %>
  <h1>A List of Workers</h1>

  <% @workers.each do |worker| %>
  <% if worker.requests.any? %>
    <h3>Name: <%= worker.first_name %>, <%= worker.last_name %> <%= link_to "status: assigned!", admin_requests_path, class: "btn btn-success" %> <%= link_to fa_icon("eye") + "View", admin_worker_path(worker), class: "btn btn-primary" %></h3>
  <% else %>
    <h3>Name: <%= worker.first_name %>, <%= worker.last_name %> <%= link_to "status: unassigned!", admin_requests_path, class: "btn btn-success" %> <%= link_to fa_icon("eye") + "View", admin_worker_path(worker), class: "btn btn-primary" %></h3>
  <% end %>
  <% end %>
  <% end %>

</div>
</div>
</div>
</div>