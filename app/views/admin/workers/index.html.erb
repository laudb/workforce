<div class="admin-page">
  <div class="container">
  <div class="row">
    <div class="col-sm-9 col-sm-offset-1 form-box">


    <div class="row">
                
        <div class="col-lg-12 col-md-12">  
          <div class="panel panel-default">
            <div class="panel-heading">
              <h2><i class="fa fa-user"></i><strong>Registered Workers</strong></h2>
            </div>
            <div class="panel-body">
              <table class="table bootstrap-datatable countries">
                <thead>
                  <tr>
                    <th></th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Sex</th>
                    <th>Phone Number</th>
                    <th>Status</th>
                    <th></th>
                  </tr>
                </thead>  


                <% if @workers.count == 0 %>
                <h1>No workers yet.</h1>
                <% else %>
                <% @workers.each do |worker| %>
                <% if worker.requests.any? %>
                
                <tbody>
                  <tr>
                    <td></td>
                    <td><%= worker.first_name %></td>
                    <td><%= worker.last_name %></td>
                    <td><%= worker.sex %></td>
                    <td><%= worker.phone_number %></td>
                    <td>
                      <%= link_to "assigned!", admin_requests_path, class: "btn btn-success" %>     
                    </td>
                    <td><%= link_to fa_icon("eye") + "View", admin_worker_path(worker), class: "btn btn-primary" %></td>
                  </tr>
                  <% else %>
                  <tr>
                    <td></td>
                    <td><%= worker.first_name %></td>
                    <td><%= worker.last_name %></td>
                    <td><%= worker.sex %></td>
                    <td><%= worker.phone_number %></td>
                    <td>
                      <%= link_to "unassigned!", admin_requests_path, class: "btn btn-danger" %>   
                    </td>
                    <td><%= link_to fa_icon("eye") + "View", admin_worker_path(worker), class: "btn btn-primary" %></td>
                  </tr>
                  
                </tbody>
                  <% end %>
                  <% end %>
                  <% end %>
              </table>
            </div>
  
          </div>  

  
  

</div>
</div>
</div>
</div>