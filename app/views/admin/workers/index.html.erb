<% breadcrumb :worker %>
<div class="admin-page">
  <div class="container">
  <div class="row">
    <div class="col-sm-9 col-sm-offset-1 form-box">


    <div class="row">
                
        <div class="col-lg-12 col-md-12">  
          <div class="panel panel-default">
            <div class="panel-heading">
              <h2><i class="fa fa-user"></i><strong><%= pluralize(Worker.count, "Worker") %></strong></h2>
            </div>
            <div class="panel-body">
              <table class="table bootstrap-datatable countries">
                <thead>
                  <tr>
                    <th></th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Sex</th>
                    <th>Phone Number</th>
                    <th>Status</th>
                    <th></th>
                    <th></th>
                    <th></th>
                  </tr>
                </thead>  


                <% if @workers.count == 0 %>
                <h1>No workers yet.</h1>
                <% else %>
                <% @workers.each do |worker| %>
                <% if worker.requests.any? %>
                
                <tbody>
                  <tr>
                    <td></td>
                    <td><%= worker.first_name %></td>
                    <td><%= worker.last_name %></td>
                    <td><%= worker.sex %></td>
                    <td><%= worker.phone_number %></td>
                    <td><span class="label label-danger"><strong>assigned <%= worker.requests.first.client.first_name %>(No.<%= worker.requests.uniq.last.id %>)</strong></span></td>
                   <td></td>
                    <td>
                      <%= link_to fa_icon("arrow-circle-right") + "Go To Requests" , admin_requests_path, class: "btn btn-primary" %>     
                    </td>
                    <td><%= link_to fa_icon("eye") + "View", admin_worker_path(worker), class: "btn btn-info" %></td>
                    <td><%= link_to "Remove", admin_worker_path(worker), method: :delete, data: { confirm: "Are you sure you want to delete #{worker.first_name} from the database?"}, class: "btn btn-danger" %></td>
                  </tr>
                  <% else %>
                  <tr>
                    <td></td>
                    <td><%= worker.first_name %></td>
                    <td><%= worker.last_name %></td>
                    <td><%= worker.sex %></td>
                    <td><%= worker.phone_number %></td>
                    <td><strong><span class="label label-success">available</span></strong></td>
                    <td></td>
                    <td>
                      <%= link_to fa_icon("arrow-circle-right") + "Go To Requests" , admin_requests_path, class: "btn btn-primary" %>     
                    </td>
                    <td><%= link_to fa_icon("eye") + "View", admin_worker_path(worker), class: "btn btn-info" %></td>
                    <td><%= link_to "Remove", admin_worker_path(worker), method: :delete, data: { confirm: "Are you sure you want to delete #{worker.first_name} from the database?"}, class: "btn btn-danger" %></td>
                  </tr>
                  
                </tbody>
                  <% end %>
                  <% end %>
                  <% end %>
              </table>
            </div>
  
          </div>  

  
  

</div>
</div>
<%= link_to fa_icon("plus") + " Register Worker", new_admin_worker_path, class: "btn btn-primary" %>
</div>
</div>
</div>
</div>