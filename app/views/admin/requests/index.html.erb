<div class="admin-page">
  <div class="container">
    <div class="row">
      <div class="col-sm-9 col-sm-offset-1 form-box">  



        <h1>Below are <%= pluralize(@requests.count, "request") %> pending processing.</h1>

        <% if @requests.any? %>

        <% @requests.each do |request| %>
          <div class="row">
            <div class="col-md-3">
              <h4>Request No.<%= link_to request.id, admin_request_path(request) %></h4>
            </div>
            <div class="col-md-3">
              <h4><%= link_to request.client.fullname, admin_client_path(request.client.id) %></h4>
            </div>
            <div class="col-md-3">
              <p>request created at <%= request.created_at %></p>
            </div>
            <div class="col-md-3">
            <%= link_to "Click Here To Assign A Worker", admin_request_path(request), class: "btn btn-success" %>
            </div>
          </div>

        <% end %>

        <% else %>
        <h3>No more pending requests!</h3>
        <% end %>
      <br>

  <% if @resolved_requests.any? %>

  <h1>Resolved Requests</h1>
  <h2><%= pluralize(@resolved_requests.count, "request") %> resolved. </h2>
  <% @resolved_requests.each do |request| %>
  <div class="row">
    <div class="col-md-3">
      <h4>Request No.<%= request.id %></h4>
    </div>
    <div class="col-md-3">
      <h4><%= request.client.fullname %></h4>
    </div>
    <div class="col-md-3">
      <p>request created at <%= request.created_at %></p>
    </div>
    <div class="col-md-3">
      <%= link_to fa_icon("eye") + "View", admin_request_path(request), class: "btn btn-primary" %> <%= link_to fa_icon("minus-circle") + "unassign", admin_unassign_path(request), method: :delete,  
     data: { confirm: "Are you sure you want unassign Request No.#{request.id}?"}, class: "btn btn-warning" %> 
    </div>
  </div>
  <% end %>

  <% else %>
    <h1>No request resolved yet!</h1>
  <% end %>

</div>
</div>
</div>
</div>