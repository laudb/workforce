 <div class="admin-page">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-9 col-sm-offset-1 form-box">  


       <div class="row">

        <div class="col-lg-12 col-md-12">  
          <div class="panel panel-default">
            <div class="panel-heading">
              <h2><i class="fa fa-user"></i><strong><%= pluralize(Request.count, "Request") %></strong></h2>
            </div>
            <div class="panel-body">
              <table class="table bootstrap-datatable countries">
                <thead>
                  <tr>
                    <th></th>
                    <th>Request ID</th>
                    <th>Owner</th>
                    <th>created at</th>
                    <th>status</th>
                  </tr>
                </thead>  
                <% @clients.each do |client| %>
                <% if client.requests.any? %>
                <% client.requests.each do |c_request| %>
                <% if c_request.resolved == true %>
                <tbody>
                  <tr>
                    <td></td>
                    <td><%= link_to c_request.id, admin_client_request_path(client, c_request) %></td>
                    <td><%= c_request.client.fullname %></td>
                    <td><%= c_request.created_at %></td>
                    <td><span class="label label-success">assigned</span></td>
                  </tr>

                </tbody>
                <% else %>
                <tbody>
                  <tr>
                    <td></td>
                    <td><%= link_to c_request.id, admin_client_request_path(client, c_request) %></td>
                    <td><%= c_request.client.fullname %></td>
                    <td><%= c_request.created_at %></td>
                    <td><span class="label label-danger">unassigned</span></td>
                  </tr>

                </tbody>
                <% end %>     
                <% end %>
                <% end %>
                <% end %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>