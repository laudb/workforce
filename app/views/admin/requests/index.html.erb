<div class="admin-page">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-9 col-sm-offset-1 form-box">  




        <% if @requests.any? %>
        <div class="row">

          <div class="col-lg-12 col-md-12">  
            <div class="panel panel-default">
              <div class="panel-heading">
                <h2><i class="fa fa-user"></i><strong><%= pluralize(@requests.count, "Unresolved Request") %></strong></h2>
              </div>
              <div class="panel-body">
                <table class="table bootstrap-datatable countries">
                  <thead>
                    <tr>
                      <th></th>
                      <th>Request ID</th>
                      <th>Owner</th>
                      <th>created at</th>
                      <th></th>
                    </tr>
                  </thead>  

                  <% @requests.each do |request| %>

                  <tbody>
                    <tr>
                      <td></td>
                      <td><%= link_to request.id, admin_request_path(request) %></td>
                      <td><%= link_to request.client.fullname, admin_client_path(request.client.id) %></td>
                      <td><%= request.created_at %></td>
                      <td><%= link_to "Click Here To Assign A Worker", admin_request_path(request), class: "btn btn-success" %></td>
                    </tr>


                    <% end %>

                    <% else %>
                    <tr>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                      <td></td>
                    </tr>  
                  </tbody>          
                  <% end %>
                </table>
              </div>
            </div>
          </div>
        </div>


        <br>

        <% if @resolved_requests.any? %>
        <div class="row">
          <div class="col-lg-12 col-md-12">  
            <div class="panel panel-default">
              <div class="panel-heading">
                <h2><i class="fa fa-user"></i><strong><%= pluralize(@resolved_requests.count, "Resloved Request")%></strong></h2>
              </div>
              <div class="panel-body">
                <table class="table bootstrap-datatable countries">
                  <thead>
                    <tr>
                      <th></th>
                      <th>Request ID</th>
                      <th>Owner</th>
                      <th>created at</th>
                      <th></th>
                    </tr>
                  </thead>  

  
  <% @resolved_requests.each do |request| %>

  <% if request.client.nil? %>
  <h4>Request No.<%= request.id %></h4>
  <% else %>
  <tbody>
    <tr>
      <td></td>
      <td><%= link_to request.id, [:admin, @client, request] %></td>
      <td><%= link_to request.client.fullname, admin_client_path(request.client.id) %></td>
      <td><%= request.created_at %></td>
      <td><%= link_to fa_icon("minus-circle") + "click here to unassign", [:admin, @client, request], class: "btn btn-warning" %></td>
    </tr>

    </tbody>
    <% end %>
    <% end %>

    <% else %>
    
    
  <% end %>
</table>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
</div>