<%= simple_form_for([:admin, client, article]) do |f| %>
<%= f.input :caption, label: "Caption" %>
<%= f.input :content, label: "Content" %>

<% if article.persisted? %>
<%= f.button :submit, "Edit Blog", class: "btn btn-primary" %>
<% else %>
<%= f.button :submit, "Create a blog post", class: "btn btn-primary" %>
<% end %>
<% end %>