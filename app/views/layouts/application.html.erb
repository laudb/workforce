<!DOCTYPE html>
<html>
<head>
  <title>Workforce</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= link_to "Workforce", root_path %>

<% if current_client %>
  <%= link_to "Log Out", destroy_client_session_path, method: :delete,
  			data: {confirm: "#{current_client.email}, are you sure you want to log out?"} %> |
<% else %>
  <%= link_to "Log In", new_client_session_path %> 
<% end %>

<% if current_client && current_client.admin == false %>
  <%= link_to "View all your requests", my_requests_path %>
<% end %>





<% admins_only do %>
  <%= link_to "Admin", admin_root_path %>
  <%= link_to "Worker Registration", new_admin_worker_path %>
  <%= link_to "Workers", admin_workers_path %>
<% end %>

<% flash.each do |key, message| %>
  <div><%= message %></div>
<% end %>

   <%= yield %>

</body>
</html>
