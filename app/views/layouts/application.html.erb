<!DOCTYPE html>
<html>
<head>
  <title>Workforce</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<%= link_to "Workforce", root_path %>

<% if current_client %>
  <%= link_to "Log Out", destroy_client_session_path, method: :delete,
  			data: {confirm: "#{current_client.email}, are you sure you want to log out?"} %> |
<% else %>
  <%= link_to "Log In", new_client_session_path %> 
<% end %>

<% if current_client && current_client.admin == false %>
  <%= link_to "View all your requests", my_requests_path %>
<% end %>





<% admins_only do %>
  <%= link_to "Admin", admin_root_path %>
  <%= link_to "Worker Registration", new_admin_worker_path %>
<% end %>

<nav id="navigation" class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header page-scroll">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-rj-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                
                <a class="navbar-brand" href="#page-top">Workforce</a>
            </div>
            <!-- //.navbar-header -->
            
            <div class="navbar-collapse collapse navbar-rj-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="page-scroll">
                        <a href="#Requests">Requests</a>
                    </li>

                    <li class="page-scroll">
                        <a href="#who-we-are">About</a>
                    </li>
                    
                    <li class="page-scroll">
                        <a href="#Log-in">Login</a>
                    </li>
                </ul>
            </div>
            <!-- //.navbar-collapse -->
        </div>
        <!-- //.container -->
    </nav>
 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>
   <%= yield %>

</body>
</html>
