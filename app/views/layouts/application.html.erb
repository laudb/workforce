<body>

         <header id="header" class="alt" style="background:#fff;box-shadow:-1px 2px 3px 0px rgba(46,56,66,.21);">

              <a href="/" class="spring-brand">
                <%= image_tag("spring2-logo-final.png", :alt => "spring logo", :class => "img-responsive", :style=>'margin-left: 0px;') %>
              </a>
            
            <nav id="nav">

              <ul style="display:inline-flex;">
                <% if current_client %>
                    <li class="special visible-lg">
                      <%= link_to "score board", referrals_path %>
                    </li>
                    <li class="special visible-lg">
                      <%= link_to "Invite Others", new_referral_path %>
                    </li>
                    <li class="special visible-lg">
                        <%= link_to current_client.first_name, edit_client_registration_path %>
                    </li>
                    <li class="special visible-lg">
                        <%= link_to "Requests", my_requests_path %>
                    </li>
                    <li class="special visible-lg">
                      <%= link_to "Log Out", destroy_client_session_path, method: :delete,
                                data: {confirm: "#{current_client.email}, are you sure you want to log out?"} %>
                    </li> 
                <% else %>
                    <li class="special visible-lg">
                      <%= link_to "Log In", new_client_session_path %>
                    </li>
                <% end %>


                <li class="special">
                  <a href="#menu" class="menuToggle visible-xs"><span>Menu</span></a>
                  <div id="menu">
                    <ul>
                    <% if current_client %>
                      <li class="special">
                        <%= link_to "scoreboard", referrals_path %>
                      </li>
                      <li class="special">
                        <%= link_to "Invite Others", new_referral_path %>
                      </li>
                      <li class="special">
                          <%= link_to current_client.first_name, edit_client_registration_path %>
                      </li>
                      <li class="special">
                          <%= link_to "Requests", my_requests_path %>
                      </li>
                      <li>
                      <%= link_to "Book a Cleaning", new_request_path, :style=>'color: #ffd207;' %>
                    </li>
                    <% else %>
                       <li><%= link_to "FAQ", q_and_a_path %></li>

                        <li class="special">
                          <%= link_to "Log In", new_client_session_path %>
                        </li>
                        <li class="special">
                          <%= link_to "Sign Up", new_client_registration_path %>
                        </li>
                    <% end %>

                    </ul>
                  </div>
                </li>
              </ul>
            </nav> 

          </header>


 <% flash.each do |key, message| %>
    <p style="position:absolute; z-index:10000; margin:0 auto;left:0; right:0; width:40%; background:#BDE5F8; color:#00529B; border:solid 1px #00529B; padding:10px;" class="well well-sm text-center" id="flashmessage">
      <%= message %>
    </p>
 <% end %>

 <style>
 #region{
  padding-top: 40px;
 }
 </style>
 <div id="region" style="min-height:100%;">
   <%= yield %>
 </div>

<script>

setTimeout(fade_out, 5000);

function fade_out() {
 $("#flashmessage").fadeOut().empty();
}

</script>
</body>
</html>
