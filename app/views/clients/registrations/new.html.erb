<div class="container-fluid" >
      <div class="row">
      <!-- <div class="col-sm-6 form-box wow fadeInUp content-box"></div> -->
       <div class="col-sm-5 col-sm-offset-3">

        <div class="panel-group">
             <div class="panel panel-info">
            <!-- Default panel contents -->
             <div class="panel-heading">
                    <div class="form-top-right text-center">
                      <h2>Provide Your Details</h2>
                    </div>        
             </div>
            
             <div class="panel-body">

                    <div class="form-bottom">
                     <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                          <%= devise_error_messages! %>
                          
                          <div class="field">
                            <%= f.label :fullname, :class=>"login-label"%><br />
                            <%= f.text_field :fullname, autofocus: true, :class=>"form-control"  %>
                          </div>
                          
                          <div class="field">
                            <%= f.label :email, :class=>"login-label" %><br />
                            <%= f.email_field :email, :class=>"form-control"  %>
                          </div>

                          <div class="field">
                            <%= f.label :password, :class=>"login-label" %>
                            <% if @minimum_password_length %>
                            <em>(<%= @minimum_password_length %> characters minimum)</em>
                            <% end %><br />
                            <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
                          </div>

                          <div class="field">
                            <%= f.label :password_confirmation, :class=>"login-label" %><br />
                            <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control"  %>
                          </div>

                          <div class="field">
                            <%= f.label :phone_number, :class=>"login-label"%><br />
                            <%= f.text_field :phone_number, maxlength: "10", placeholder:"024 123 4567", type:"tel", :class=>"form-control" %>
                          </div>

                          <div class="field">
                            <%= f.label :location, :class=>"login-label" %><br />
                            <%= f.text_field :location, placeholder:"Street Address, House Number, Area",:class=>"form-control" %>
                          </div>

                          <div class="actions">
                            <%= f.submit "Sign up", :class=>"btn btn-default btn-lg btn-block submit_button col-md-3", :id =>"cleanButton" %>
                          </div>
                          <div class="actions">
                            <%= render "clients/shared/links" %>
                          </div>
                        <% end %>
                    </div>

                </div>

          </div>
       </div>

    </div>
  </div>
</div>






