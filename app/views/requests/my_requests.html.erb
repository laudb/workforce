<div class="container-fluid" >
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3 text-center">
<!-- <div class="well"> -->
      
      <div class="panel panel-info">
        <div class="panel-heading text-left" style="border-bottom:solid 1px rgba(25,41,100,0.2);">
          <h2>Hi <strong><%= current_client.first_name %></strong></h2>
        </div>
        <div class="panel-body">

            <h3 class="text-left" style="margin-top:0px;"> Here are your requests:</h3>
              <% if @my_requests.count == 0 %>
                <h2>No Request has been made.</h2>
              <% elsif @my_requests.count > 0 %>

              <% @my_requests.each do |my_request| %>
                <% if my_request.status == "resolved" %>
                <% if my_request.workers.any? %>
                  <h3><strong><%= my_request.id %></strong></h3><h3>status: This request has been <span class="label label-info">resolved</span>. Your cleaner will be with you shortly. <br> <%= link_to fa_icon("eye") + " View Request", my_request, :class=>"btn btn-primary" %> </h3>
                  <% end %>
                <% elsif my_request.status == "done" %>
                <h3><strong><%= my_request.id %></strong></h3><h3>status: This request has been <span class="label label-success">completed</span>. Please leave a comment about how your experience with us. <br> <%= link_to fa_icon("eye") + " View Request", my_request, :class=>"btn btn-primary" %> </h3>
                <% elsif my_request.status == "redo" %>
                <h3><strong><%= my_request.id %></strong></h3><h3>status: This request is being <span class="label label-danger">re-assigned</span> to another cleaner. We will notify you as soon as a cleaner is re-assigned. <br> <%= link_to fa_icon("eye") + " View Request", my_request, :class=>"btn btn-primary" %> </h3>
                <% elsif my_request.status == "unresolved" %>
                  <div class="table-responsive">
                    <table class="table table-bordered">
                      <tbody>
                          <tr>
                            <td style="width:50%; border-color:#e8e8e8;">
                             <h3>Request No.<%= my_request.id %></h3>
                            </td>
                            <td style="border-color:#e8e8e8;">
                             <h3><%= link_to fa_icon("eye") + " View Request", my_request, :class=>"btn btn-primary" %> </h3>
                            </td>
                            <td style="border-color:#e8e8e8;">
                             <h3><%= link_to fa_icon("pencil") + " Edit Request", [:edit, my_request], :class=>"btn btn-danger" %> </h3>
                            </td>
                          </tr>
                      </tbody>
                    </table>
                  </div>
                <% end %>
              <% end %>
            <% end %>

              <%= link_to fa_icon("plus") + " Create A Request", new_request_path, :class=>"btn btn_submit btn-primary" %>

            </div>
        </div>
    </div>
</div>
