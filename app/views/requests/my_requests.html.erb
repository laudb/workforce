<div class="container" >
      <div class="row">
        <div class="col-sm-6 col-sm-offset-3 form-box wow fadeInUp content-box text-center">
<div class="well">
            <h2>Hi <strong><%= current_client.fullname %></strong>,<br> Here are your requests.</h2>

              <% if @my_requests.count == 0 %>
              <h2>No Request has been made.</h2>
              <% elsif @my_requests.count > 0 %>
              <% @my_requests.each do |my_request| %>
                <% if my_request.resolved == true %>
                  <h3><strong><%= truncate(my_request.other_task) %></strong></h3><h3>status: This request has been resolved. Your cleaner will be with you shortly. <br> <%= link_to "View", my_request, :class=>"btn btn-primary" %> </h3>
                <% else %>
                  <h3><strong> <%= truncate(my_request.other_task) %></strong></h3> <h3><%= link_to "View", my_request, :class=>"btn btn-primary" %> <%= link_to "Edit", [:edit, my_request], :class=>"btn btn-primary" %> </h3>
                <% end %>
              <% end %>
            <% end %>

              <%= link_to "Create A Request", root_path, :class=>"btn btn-danger" %>

            </div>
        </div>
    </div>
</div>
