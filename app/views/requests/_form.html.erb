<%= simple_form_for (request) do |f| %>
<div class="container-fluid" >
  <div class="row">

    
  <h3>Tell Us About Your House <small id="daPrice" class="pull-right"></small></h3>
  <br><br>
  <div class="row text-center">
    <div class="col-md-12" onclick="calculatePricing()"> 
      <%= f.select :bedrooms, options_for_select([["1 bedroom", 1], ["2 bedrooms", 2], ["3 bedrooms", 3], ["4 bedrooms", 4], ["5+ bedrooms", 5]]) %>
      <%= f.select :bathrooms, options_for_select([["1 bathroom", 1], ["2 bathrooms", 2], ["3 bathrooms", 3], ["4 bathrooms", 4], ["5+ bathrooms", 5]]) %>
      <%= f.select :kitchens, options_for_select([["1 kitchen", 1], ["2 kitchens", 2], ["3 kitchens", 3], ["4 kitchens", 4], ["5+ kitchens", 5]]) %> 
      <%= f.select :hall, options_for_select([["1 living room", 1], ["2 living rooms", 2], ["3 living rooms", 3], ["4 living rooms", 4], ["5+ living rooms", 5]]) %>
    </div>
    </div>
  </div>
   

  
 <%= f.input :extra_services, :collection => [["Compound cleaning", "Compound cleaning"], ["Washing & Ironing", "Washing & Ironing"], ["Fridge", "Fridge"], ["Storeroom", "Storeroom"]], :as => :check_boxes, :item_wrapper_class => "inline", :label => "Extra Services" %>

 <div class="row" onkeyup="calculatePricing()">
   <div class="col-md-6">
     <%= f.input :days, label: "Number of days" %>
   </div>

   <div class="col-md-6">
    <%= f.input :frequency, :collection => ["weekly", "monthly"], :as => :radio_buttons, :checked => "weekly", :item_wrapper_class => "inline", :label => "Frequency" %>

    <%= f.input :weekdays, :collection => [["Monday", "Monday"], ["Tuesday", "Tuesday"], ["Wednesday", "Wednesday"], ["Thursday", "Thursday"], ["Friday", "Friday"], ["Saturday", "Saturday"], ["Sunday", "Sunday"]], :as => :check_boxes, :item_wrapper_class => "inline", :label => "Pick a day" %>
   </div>

   <div class="col-md-12">
     <%= f.input :provide, :collection => ["Workforce provides cleaning products", "I'll use my own cleaning products"], :as => :radio_buttons, :checked => "Workforce provides cleaning products", :item_wrapper_class => 'inline', :label => "Which would you prefer?" %>
   </div>
 </div>
  
  <h4 class="form-content-label">
    When Do You Want Us To Come?
  </h4>
  <div class="row">
    
  <div class="col-xs-12">
  <%= f.datetime_select :date_time, :ampm => true, :minute_step => 15 %><br><br>
  </div>
  </div>

  <%= f.button :submit, "GET A CLEANER", :class=>"btn-block btn-lg" %>
  
  </div>
  </div>
<% end %>