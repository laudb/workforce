<%= simple_form_for (request) do |f| %>
<div class="container-fluid" >

  <div class="row">
    <div class="panel panel-info">
      <div class="panel-heading">
        <h2 class="panel-title text-center">Tell Us About Your House</h2>
      </div>
      <div class="panel-body">

        <div onchange="calculatePricing()"> 
          <div class="col-md-3 col-sm-12 col-xs-12 text-center">
          
          <%= f.select :bedrooms, options_for_select([["1 bedroom", 1], ["2 bedrooms", 2], ["3 bedrooms", 3], ["4 bedrooms", 4], ["5+ bedrooms", 5]], :selected => f.object.bedrooms),{},{:class => "btn btn-default"}%>
          </div>
          <div class="col-md-3 col-sm-12 col-xs-12 text-center">
          <%= f.select :bathrooms, options_for_select([["1 bathroom", 1], ["2 bathrooms", 2], ["3 bathrooms", 3], ["4 bathrooms", 4], ["5+ bathrooms", 5]], :selected => f.object.bathrooms),{},{:class => "btn btn-default"} %>
          </div>
          <div class="col-md-3 col-sm-12 col-xs-12 text-center">
          <%= f.select :kitchens, options_for_select([["1 kitchen", 1], ["2 kitchens", 2], ["3 kitchens", 3], ["4 kitchens", 4], ["5+ kitchens", 5]], :selected => f.object.kitchens),{},{:class => "btn btn-default"} %> 
          </div>
          <div class="col-md-3 col-sm-12 col-xs-12 text-center">
          <%= f.select :hall, options_for_select([["1 living room", 1], ["2 living rooms", 2], ["3 living rooms", 3], ["4 living rooms", 4], ["5+ living rooms", 5]], :selected => f.object.hall),{},{:class => "btn btn-default"} %>
        </div>
    </div>
</div>
        <div class="panel-body">
        <div onclick="calculatePricing()" id="extra">
          <div class="col-md-12 col-xs-12">
            <%= f.input :extra_services, :collection => [["Compound Cleaning(GHc15.00)", 15.00], ["Fridge(GHc 10.00)", 10.01], ["Storeroom(GHc 10.00)", 10.00]], :as => :check_boxes, :item_wrapper_class => "inline", :label => "Extra Services" %>
          </div>
        </div> 
      </div>
     
     <div class="panel-body" style="padding-top:0px;">
       <div  onchange="calculatePricing()">

         <div class="col-md-12 col-sm-12" id="frequency">

          <%= f.input :frequency, :collection => [["One-off (GHc 60.00)", 60], ["Weekly (GHc 150.00)", 150], ["Monthly (GHc 500.00)", 500]], :as => :radio_buttons, :checked =>["One-off (GHc 60.00)", 60], :item_wrapper_class => "inline", :label => "Frequency" %>
        </div>

      </div>
      </div>
      <br>
     <div class="panel-body" style="padding-top:0px;">
      <div onkeyup="calculatePricing()"; id="days">

      <div class="col-md-10 col-sm-12">
          <%= f.input :weekdays, :collection => [["Monday", "Monday"], ["Tuesday", "Tuesday"], ["Wednesday", "Wednesday"], ["Thursday", "Thursday"], ["Friday", "Friday"], ["Saturday", "Saturday"], ["Sunday", "Sunday"]], :as => :check_boxes, :item_wrapper_class => "inline", :label => "Schedule with us" %>
        </div>
      </div>
    </div>
    
    <div class="panel-body">
      
    <div class="col-xs-12 text-center" id="datetime">
      <h4 class="form-content-label">
        When Do You Want Us To Come?
      </h4>
      <%= f.datetime_select :date_time, :start_year => Date.today.year, :end_year => Date.today.year, :ampm => true, :minute_step => 15, :class=>"btn btn-default text-center", :label =>"When Do You Want Us To Come?" %><br><br>
    </div>
  </div>
    <div class="panel-body" style="padding-bottom:20px;">

    <div class="col-xs-12">
  <%#= f.button :button, :class => "btn-primary btn-block btn-lg", :id => "back-to-schedule" %>
        <% if request.persisted? %>
          <%= f.button :submit, "Edit Request", :class=>"btn-primary btn-lg btn-block col-md-3" %>
        <% else %>
          <%= f.button :submit, "Get A Cleaner", :class=>"btn btn-block submit_button  col-md-3",:id =>"cleanButton" %>
        <% end %>
    </div>
        </div>
        </div>
      </div>
    </div>
    </div>
<% end %>