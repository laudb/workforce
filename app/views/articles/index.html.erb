<div class="container">
	<div class="row">
		<div class="col-sm-8 col-sm-offset-2">


			<div class="panel panel-info">
				<div class="panel-heading">
					<h1><strong>Blog Posts<%= link_to "Subscribe to our weekly newsletter", root_path, class: "btn btn-info pull-right" %></strong></h1> 
				</div>
				<div class="panel-body">
					<div class="row">
						<div class=" col-md-8 col-lg-8 "> 
							<table class="table table-user-information">
								<tbody>
									<tr>

										<% @articles.each do |article| %>
										<h1><strong><%= link_to article.caption, article_path(article) %></strong></h1>
										<p><%= link_to (image_tag article.caption_photo_url(:thumb)), article_path(article) %></p>

										<p>
											<%= truncate(article.content, :length => 500) %>
											<% if article.content.length > 500 %>
											<strong><%= link_to "Read More", article_path(article) %></strong>
										</p>
										<% end %>

										<% if article.content.length < 1000 %>
										<p><strong><i class="fa fa-book" aria-hidden="true"></i> 1 min read</strong></p>
										<% elsif article.content.length > 1000 && article.content.length < 2000 %>
										<p><strong><i class="fa fa-book" aria-hidden="true"></i> 2 min read</strong></p>
										<% elsif article.content.length > 2000 %>
										<p><strong><i class="fa fa-book" aria-hidden="true"></i> 5 min read</strong></p>
										<% end %>	
										<p><strong><i class="fa fa-user" aria-hidden="true"></i>
											written by <%= article.client.first_name %> <%= article.client.last_name %>, <%= article.created_at.strftime("%A, %d %B %Y") %></strong></p>
											<% end %>

										</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	